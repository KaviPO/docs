{
  "openapi": "3.0.0",
  "info": {
    "title": "API Documentation",
    "version": "1.0.0",
    "description": "API documentation for generating HPP links"
  },
  "paths": {
    "/server-to-server-interface/hpp/generate/link": {
      "post": {
        "summary": "Generate HPP Link",
        "description": "This endpoint generates a Hosted Payment Page (HPP) link for a transaction.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "return_url": {
                    "type": "object",
                    "properties": {
                      "webhook_url": { "type": "string" },
                      "success_url": { "type": "string" },
                      "decline_url": { "type": "string" },
                      "cancel_url": { "type": "string" }
                    }
                  },
                  "amount": { "type": "string" },
                  "currency": { "type": "string" },
                  "merchant_id": { "type": "string" },
                  "merchant_email": { "type": "string" },
                  "merchant_txn_ref": { "type": "string" },
                  "payment_method": {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string" },
                      "store_payment_method": { "type": "boolean" }
                    }
                  },
                  "billing_address": {
                    "type": "object",
                    "properties": {
                      "country": { "type": "string" },
                      "email": { "type": "string" },
                      "phone": { "type": "string" },
                      "address1": { "type": "string" },
                      "city": { "type": "string" },
                      "state": { "type": "string" },
                      "postal_code": { "type": "string" }
                    }
                  },
                  "shipping_address": {
                    "type": "object",
                    "properties": {
                      "country": { "type": "string" },
                      "email": { "type": "string" },
                      "phone": { "type": "string" },
                      "address1": { "type": "string" },
                      "city": { "type": "string" },
                      "state": { "type": "string" },
                      "postal_code": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "HPP Link Generated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "hpp_url": {
                      "type": "string",
                      "example": "https://example.com/hpp/12345"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid Request"
          }
        },
        "security": [
          {
            "basicAuth": []
          },
          {
            "api_key": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      },
      "api_key": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}