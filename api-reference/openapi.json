{
  "openapi": "3.0.0",
  "info": {
    "title": "Payment Options API",
    "description": "API for generating Hosted Payment Page (HPP) links.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://2d1uj551b4.execute-api.ap-southeast-1.amazonaws.com/dev/"
    }
  ],
  "security": [
    {
      "apiKeyAuth": [],
      "xApiKeyAuth": []
    }
  ],
  "paths": {
    "/api/v1/server-to-server-interface/hpp/generate/link": {
      "post": {
        "summary": "Generate HPP Link",
        "description": "This endpoint allows you to generate a Hosted Payment Page (HPP) link.",
        "operationId": "generateHppLink",
        "requestBody": {
          "description": "The request payload to generate an HPP link.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "return_url": {
                    "type": "object",
                    "properties": {
                      "webhook_url": { "type": "string", "example": "https://webhook.site/3a0a9c01-cf27-40c7-ade4-28abdcba087b" },
                      "success_url": { "type": "string", "example": "http://www.bing.com/" },
                      "decline_url": { "type": "string", "example": "http://www.google.com/" },
                      "cancel_url": { "type": "string", "example": "http://tinkfactory.com/" }
                    }
                  },
                  "amount": { "type": "string", "example": "100.00" },
                  "currency": { "type": "string", "example": "JPY" },
                  "merchant_id": { "type": "string", "example": "JP00000275" },
                  "merchant_email": { "type": "string", "example": "info@tinkfactory.com" },
                  "merchant_txn_ref": { "type": "string", "example": "2003089893366DTEST" },
                  "payment_method": {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string", "example": "scheme" },
                      "store_payment_method": { "type": "boolean", "example": false }
                    }
                  },
                  "billing_address": {
                    "type": "object",
                    "properties": {
                      "city": { "type": "string", "example": "Ebene" },
                      "email": { "type": "string", "example": "kavi@ghunowa.com" },
                      "state": { "type": "string", "example": "Rose-Hill" },
                      "country": { "type": "string", "example": "" },
                      "address1": { "type": "string", "example": "Ebene Junction" },
                      "postal_code": { "type": "string", "example": "1234567" },
                      "phone_number": { "type": "string", "example": "52553305" }
                    }
                  },
                  "shipping_address": {
                    "type": "object",
                    "properties": {
                      "city": { "type": "string", "example": "Ebene" },
                      "email": { "type": "string", "example": "kavi@ghunowa.com" },
                      "state": { "type": "string", "example": "Rose-Hill" },
                      "country": { "type": "string", "example": "" },
                      "address1": { "type": "string", "example": "Ebene Junction" },
                      "postal_code": { "type": "string", "example": "1234567" },
                      "phone_number": { "type": "string", "example": "52553305" }
                    }
                  }
                },
                "required": ["return_url", "currency", "merchant_id", "merchant_email", "merchant_txn_ref", "payment_method", "billing_address"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "HPP link generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string", "example": "6469eb3a-812a-4262-9f7c-2328a71b16c5" },
                    "url": { "type": "string", "example": "https://checkout-dev.paymentoptions.com/jp/HostedPaymentPage/aPT5J_0d" },
                    "amount": { "type": "string", "example": "100.00" },
                    "currency": { "type": "string", "example": "JPY" },
                    "merchant_txn_ref": { "type": "string", "example": "2003089893366DTEST" },
                    "merchant_id": { "type": "string", "example": "JP00000275" },
                    "merchant_email": { "type": "string", "example": "info@tinkfactory.com" },
                    "return_url": {
                      "type": "object",
                      "properties": {
                        "webhook_url": { "type": "string", "example": "https://webhook.site/3a0a9c01-cf27-40c7-ade4-28abdcba087b" },
                        "success_url": { "type": "string", "example": "http://www.bing.com/" },
                        "decline_url": { "type": "string", "example": "http://www.google.com/" },
                        "cancel_url": { "type": "string", "example": "http://tinkfactory.com/" }
                      }
                    },
                    "billing_address": {
                      "type": "object",
                      "properties": {
                        "city": { "type": "string", "example": "Ebene" },
                        "email": { "type": "string", "example": "kavi@ghunowa.com" },
                        "state": { "type": "string", "example": "Rose-Hill" },
                        "country": { "type": "string", "example": "" },
                        "address1": { "type": "string", "example": "Ebene Junction" },
                        "postal_code": { "type": "string", "example": "1234567" },
                        "phone_number": { "type": "string", "example": "52553305" }
                      }
                    },
                    "shipping_address": {
                      "type": "object",
                      "properties": {
                        "city": { "type": "string", "example": "Ebene" },
                        "email": { "type": "string", "example": "kavi@ghunowa.com" },
                        "state": { "type": "string", "example": "Rose-Hill" },
                        "country": { "type": "string", "example": "" },
                        "address1": { "type": "string", "example": "Ebene Junction" },
                        "postal_code": { "type": "string", "example": "1234567" },
                        "phone_number": { "type": "string", "example": "52553305" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/api/v1/payment/process": {
  "post": {
    "summary": "Process Payment",
    "description": "This endpoint allows you to process a payment for an order.",
    "operationId": "processPayment",
    "requestBody": {
      "description": "The request payload to process a payment.",
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "order_id": { 
                "type": "string", 
                "example": "ORD12345678" 
              },
              "amount": { 
                "type": "string", 
                "example": "500.00" 
              },
              "currency": { 
                "type": "string", 
                "example": "USD" 
              },
              "payment_method": {
                "type": "object",
                "properties": {
                  "type": { 
                    "type": "string", 
                    "example": "credit_card" 
                  },
                  "card_number": { 
                    "type": "string", 
                    "example": "4111111111111111" 
                  },
                  "expiry_date": { 
                    "type": "string", 
                    "example": "12/25" 
                  },
                  "cvv": { 
                    "type": "string", 
                    "example": "123" 
                  }
                }
              },
              "billing_address": {
                "type": "object",
                "properties": {
                  "address1": { 
                    "type": "string", 
                    "example": "123 Main St" 
                  },
                  "city": { 
                    "type": "string", 
                    "example": "New York" 
                  },
                  "state": { 
                    "type": "string", 
                    "example": "NY" 
                  },
                  "postal_code": { 
                    "type": "string", 
                    "example": "10001" 
                  },
                  "country": { 
                    "type": "string", 
                    "example": "US" 
                  }
                }
              }
            },
            "required": ["order_id", "amount", "currency", "payment_method", "billing_address"]
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Payment processed successfully",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": { 
                  "type": "string", 
                  "example": "success" 
                },
                "transaction_id": { 
                  "type": "string", 
                  "example": "TXN1234567890" 
                },
                "amount": { 
                  "type": "string", 
                  "example": "500.00" 
                },
                "currency": { 
                  "type": "string", 
                  "example": "USD" 
                }
              }
            }
          }
        }
      },
      "400": {
        "description": "Invalid request"
      }
    }
  }
}

  },
  "components": {
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      },
      "xApiKeyAuth": {
        "type": "apiKey",
        "name": "x-api-key",
        "in": "header"
      }
    }
  }
}
